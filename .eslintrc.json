{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": [
            "error"
        ],
        "react/jsx-filename-extension": 0,
        "experimentalDecorators": 0,
        "react/jsx-indent": [
            2,
            4
        ],
        "react/button-has-type": 0
    },
    "globals": {
        "describe": false,
        "it": false,
        "expect": false,
        "shallow": false,
        "mount": false
    }
}